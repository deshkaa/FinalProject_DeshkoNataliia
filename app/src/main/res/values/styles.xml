<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="contentInsetLeft">@dimen/contentInset</item>
        <item name="contentInsetStart">@dimen/contentInset</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_textsize</item>
        <item name="android:textColor">@color/colorSubActivityTitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorSubActivityTitle</item>
    </style>

    <style name="RecyclerViewStyle"></style>


</resources>
